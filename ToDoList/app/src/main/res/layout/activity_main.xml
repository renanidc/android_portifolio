<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aula.com.todolist.MainActivity">

    <EditText
        android:id="@+id/tarefaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAdicionarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tarefaId"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/tarefaId"
        android:layout_toRightOf="@+id/tarefaId"
        android:text="Adicionar" />

    <ListView
        android:id="@+id/listViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnAdicionarId"
        android:layout_alignLeft="@+id/tarefaId"
        android:layout_alignRight="@+id/btnAdicionarId"
        android:layout_alignStart="@+id/tarefaId"
        android:layout_below="@+id/btnAdicionarId"
        android:layout_marginTop="14dp"
        android:background="?attr/colorButtonNormal" />
</RelativeLayout>
